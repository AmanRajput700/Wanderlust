<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit Your Listing</h3>
        <body>
            <form  method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div    class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input name="listing[title]" id="title" class="form-control" type="text" value ="<%=listing.title%>" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
               
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="listing[description]" class="form-control" id="description" rows="5" cols="20" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Please Enter a short Description</div>
                </div>

                <div class="mb-3">
                    <img src="<%=originalImageUrl%>">
                </div>
               
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" class="form-control"  name="listing[image]" id="image">
                </div>
               
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <input value="<%=listing.price%>"  required class="form-control" name="listing[price]" id="price" type="number">
                        <div class="invalid-feedback">Price Should be Valid</div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" required value="<%=listing.country%>" class="form-control" name="listing[country]" id="country">
                        <div class="invalid-feedback">Country Should be Valid</div>
                   </div>
                </div>
               
               
               <div class="mb-3">
                <label for="location" class="form-label">Location:</label>
                <input type="text" required value="<%=listing.location%>" class="form-control" name="listing[location]" id="location">
                <div class="invalid-feedback">Location Should be Valid</div>
               </div>
        
               
        
            
               <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
            
        </body>
    </div>
</div>

